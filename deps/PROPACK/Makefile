all:
	@( cd double; \
	$(MAKE) all; \
	cd .. ; \
	cd single; \
	$(MAKE) all; \
	cd .. ; \
	cd complex16; \
	$(MAKE) all; \
	cd .. ; \
	cd complex8; \
	$(MAKE) all; \
	cd .. )

clean:
	@( cd double; \
	$(MAKE) clean; \
	cd .. ; \
	cd single; \
	$(MAKE) clean; \
	cd .. ; \
	cd complex16; \
	$(MAKE) clean; \
	cd .. ; \
	cd complex8; \
	$(MAKE) clean; \
	cd .. )
